@model IEnumerable<License.Models.User>

@{
    ViewBag.Title = "Users";
}
<h2>Users</h2>
<div class="row">
    <div class="col-md-12">

        <table class="table">
            <tr>
                <th class="col-md-1">
                    Status
                </th>
                <th class="col-md-2">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="col-md-4">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="col-md-2">
                    @Html.DisplayNameFor(model => model.Organization.Name)
                </th>
                <th class="col-md-3`">
                   Action
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-md-1">
                        @if (item.IsActive)
                        {
                            <div style="background-color:green;width:10px;height:10px" class="img-circle"></div>
                        }
                        else
                        {
                            <div style="background-color:grey;width:10px;height:10px" class="img-circle"></div>
                        }
                    </td>
                    <td class="col-md-2">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="col-md-4">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="col-md-2">
                        @Html.DisplayFor(modelItem => item.Organization.Name)
                    </td>
                    <td class="col-md-3">
                        @Html.ActionLink("Edit", "EditUser", "User",new { id = item.UserId }, new { @class="btn btn-default" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
