@model IEnumerable<License.MetCalWeb.Models.User>

@{
    ViewBag.Title = "View";
}
<h2>On Premise Admin Users</h2>
<div class="row">
    <div class="col-md-12">

        <table class="table">
            <tr>
                <th class="col-md-1">
                    Status
                </th>
                <th class="col-md-2">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="col-md-4">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="col-md-2">
                    @Html.DisplayNameFor(model => model.Organization.Name)
                </th>
                <th class="col-md-3`">
                    @Html.DisplayName("Subscription")
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-md-1">
                        @if (item.IsActive)
                        {
                            <div style="background-color:green;width:10px;height:10px" class="img-circle"></div>
                        }
                        else
                        {
                            <div style="background-color:grey;width:10px;height:10px" class="img-circle"></div>
                        }
                    </td>
                    <td class="col-md-2">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="col-md-4">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="col-md-2">
                        @Html.DisplayFor(modelItem => item.Organization.Name)
                    </td>
                    <td class="col-md-3">
                        @foreach (var obj in item.SubscriptionList)
                        {
                            @Html.DisplayName(obj.Name ?? "")
                            <br />
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
