@model License.Models.Role
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div id='myModalContent'>
            @using (Html.BeginForm("Create", "Roles", FormMethod.Post))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Name</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        @Html.AntiForgeryToken()
                        <div class="col-md-12">
                            <div class="form-group">
                                <label id="error" class="message-error"></label>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(r => r.Name, new { @class = "col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(r => r.Name,new { @class="txtName"})
                                    @Html.ValidationMessageFor(r => r.Name)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-default" data-dismis="model" value="Create" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            }
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('form').on('submit', function (e) {
            e.preventDefault();
            var form = $(this);
            var name = $('.txtName').val().toString().trim();
            if (name == "") {
                $('#error').text('please enter name');
                return false;
            }
            $.ajax({
                url: form.attr('action'),
                method: form.attr('method'),
                data: form.serialize(),
                success: function (data) {
                    if (!data.success) {
                        $('#error').text(data.message);
                    }
                    else {
                        location.reload();
                    }
                },
                error: function (data) {
                    console.log(data);
                }
            });
        });
    });
</script>

