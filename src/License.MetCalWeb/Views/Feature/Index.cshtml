@model IEnumerable<License.MetCalWeb.Models.Feature>
@{
    ViewBag.Title = "Index";
}

<h2>Features</h2>
<script>
    $(function () {
        $('.ancDelete').on('click', function (e) {
            e.preventDefault();
            var status = confirm("Are you sure you want to delete the Product?");
            if (status) {
                $.ajax({
                    url: $(this).attr('href'),
                    method: 'POST',
                    dataType: 'application/json',
                    success: function (data) {
                        if (data.status == true) {
                            alert("Feature deleted");
                        }
                        else {
                            alert(data.message);
                        }
                    }

                });
            }
        });

        $('.acnEdit').on('click', function (e) {
            e.preventDefault();
            $.ajax({
                url: $(this).attr('href'),
                method: 'POST',
                dataType: 'application/json',
                success: function (data) {
                    $('#myModal').html(data);
                    $('.modal').modal('show');
                }

            });
        });

        $('.addFeature').on('click', function (e) {
            e.preventDefault();
            $.ajax({
                url: $(this).attr('href'),
                method: 'POST',
                dataType: 'application/json',
                success: function (data) {
                    $('#myModal').html(data);
                    $('.modal').modal('show');
                }

            });
        });
    });
</script>
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @if (Model.Count() == 0)
                {
                    <div class="col-md-12">
                        <label>Features not exist</label>
                        <button value="Create Feature" class="btn btn-primary btn-custom addFeature" />
                    </div>
                }
                else
                {
                    <div class="col-md-8">
                        <table class="table">
                            <tr>
                                <th class="col-md-3">
                                    Name
                                </th>
                                <th class="col-md-4">
                                    Description
                                </th>
                                <th class="col-md-2">
                                    Version
                                </th>
                                <th class="col-md-3">
                                    Action
                                </th>
                            </tr>
                            @foreach (var f in Model)
                            {
                                <tr>
                                    <td class="col-md-3">
                                        @Html.Display(f.Name)
                                    </td>
                                    <td class="col-md-4">
                                        @Html.Display(f.Description)
                                    </td>
                                    <td class="col-md-2">
                                        @Html.Display(f.Version)
                                    </td>
                                    <td class="col-md-3">
                                        @Html.ActionLink("Edit", "Edit", new { id = f.Id, @class = "ancEdit" })  |
                                        @Html.ActionLink("Delete", "Delete", new { id = f.Id, @class = "ancDelete" })
                                    </td>
                                </tr>

                            }
                        </table>
                    </div>
                    <div class="col-md-4">
                        <button value="Create Feature" class="btn btn-primary btn-custom addFeature" />
                    </div>

                }
            </div>
        }
    </div>
</div>

<div id="myModal" class="modal">

</div>
