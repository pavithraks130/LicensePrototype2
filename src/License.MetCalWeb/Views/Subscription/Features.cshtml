@model IEnumerable<License.MetCalWeb.Models.Feature>
@{
    Layout = null;
}
<h3>2. Choose Features</h3>
<div style="margin-top:20px;">
    @{ int index = -1;
            foreach (var feature in Model)
            {
                index += 1;
                double price = feature.Price * 2;// feature.Quantity;
            <div class="form-group col-md-12 " style="margin:5px">
                <div class="col-md-5 proInput">
                    <input type="checkbox" class="checkbox col-md-1 enableQty" name="selectedIndexAndProductIdList" value="@feature.Id" />
                    <label class="col-md-11">@feature.Name</label>
                </div>
                <div class="col-md-2 proCost">
                    <label class="lblSelectedProductCost">@feature.Price</label>
                </div>
                <div class="col-md-2 proQty">

                    <label class="txt-qty form-control" name="qty">Number of User</label>
                    @*<input type="text" class="txt-qty form-control" name="qty" id="textQTYid+@feature.Id" value="2" disabled="disabled" />*@
                </div>
                <div class="col-md-3 proPrice">
                    <label class="price_val">@price</label>
                </div>
            </div>
        }
    }
</div>
