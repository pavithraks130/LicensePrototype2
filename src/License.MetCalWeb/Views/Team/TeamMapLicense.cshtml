@model License.MetCalWeb.Models.TeamMappingDetails

<script>
    $(document).ready(function () {
        $('.btn-save').click(function () {
            var isPostEnabled = true;
            i = 0;
            $('input[type=checkbox]:checked').each(function () {
                i++;
            });
            if (i == 0) {
                $('#lblError').attr('style', 'display:inline;color:red;');
                isPostEnabled = isPostEnabled && false;
            }
            else {
                $('#lblError').attr('style', 'display:none;');
                isPostEnabled = isPostEnabled && true;
            }
            return isPostEnabled;
        });
    });
</script>
<h2>
    License Mapping To Team
</h2>
<br />
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("TeamMapLicense", "Team", FormMethod.Post))
        {
            @Html.ValidationSummary()
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-md-8">
                    <span>
                        Team Name :  @Model.SelectedTeamName
                    </span>
                </div>
                <div class="col-md-8">
                    <span>
                        Concurrent team user  : @Html.TextBoxFor(x=>x.ConcurrentUserCount) 
                    </span>
                </div>
            </div>
            if (Model == null || Model.SubscriptionDetailsList.Count == 0)
            {
                <div class="form-group">
                    <div class="col-md-8">
                        <span>No Subscriptions exist  </span>
                    </div>
                </div>
            }
            else
            {
                <div class="form-group">
                    <div class="col-md-8">
                        <table class="table" style="border: none">
                            @foreach(var subscriptionList in Model.SubscriptionDetailsList)
                            {
                                <tr >
                                    <td>
                                        @subscriptionList.Name
                                        <table class="table">
                                            @for (int j = 0; j < subscriptionList.Products.Count; j++)
                                            {
                                                <tr>
                                                    <td>
                                                        <label class="control-label">
                                                            <input type="checkbox" name="selectedSubscription" value="ProId:@subscriptionList.Products[j].Id-UserSubId:@subscriptionList.UserSubscriptionId" checked="@subscriptionList.Products[j].IsSelected" class="checkbox-inline">
                                                            @subscriptionList.Products[j].Name
                                                        </label>
                                                    </td>
                                                </tr>
                                            }

                                        </table>
                                    </td>
                                </tr>
                            }
                        </table>
                        <label style="display:none;color:red;" id="lblError">License  not selected</label>
                    </div>
                </div>
                <div class="form-group">
                        <div class="col-md-8">
                            <input type="submit" name="users" value="Submit" class="btn btn-default btn-custom btn-save" />
                        </div>
                </div>
            }
        }
    </div>
</div>

