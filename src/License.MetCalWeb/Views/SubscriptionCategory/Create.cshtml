@model License.MetCalWeb.Models.SubscriptionCategory

@{
    Layout = null;
}
<h2>Edit</h2>

@using (Html.BeginForm("Create", "SubscriptionCategory", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Create </h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div style="padding-top: 15px;padding-bottom: 10px">
                            @Html.LabelFor(m => m.Name, new { @class = "col-md-4" })
                            @Html.TextBoxFor(m => m.Name, new { @class = "col-md-8" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div style="padding-top: 15px;padding-bottom: 10px">
                            @Html.LabelFor(m => m.Description, new { @class = "col-md-4" })
                            @Html.TextBoxFor(m => m.Description, new { @class = "col-md-8" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label id="lblError" style="display:none"></label>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-default" data-dismis="model" value="Create" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}
@* Javascript *@
<script>
    $(function () {
        $('form').on('submit', function (e) {
            e.preventDefault();
            var form = $(this);
            $.ajax({
                url: form.attr('action'),
                method: form.attr('method'),
                data: form.serialize(),
                success: function (data) {
                    console.log(data);
                    if (data.success) {
                        window.location.reload();
                    }
                    else {
                        $('#lblError').text(data.message);
                        $('#lblError').attr('style', 'display:inline');
                    }

                },
                error: function (data) { }
            });
        });
    });
</script>