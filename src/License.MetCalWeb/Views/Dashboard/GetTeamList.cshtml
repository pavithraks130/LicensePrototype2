
@{
    ViewBag.Title = "GetTeamList";
}
<script>
    $(function () {
        $('form').on('submit', function (e) {
            e.preventDefault();
            var form = $(this);
            $.ajax({
                method: form.attr('method'),
                url: form.attr('action'),
                data: { 'teamId': $('#ddlTeam').val() },
                success: function (data) {
                    if (data.success) {
                        location.reload();
                    }
                    else {
                        $('#error').text(data.message);
                    }
                }
            });
        });
    });
</script>

<h2>GetTeamList</h2>

<div class="modal-dialog">
    <div class="modal-content">
        <div id='myModalContent'>
            @using (Html.BeginForm("GetTeamList","Dashboard",FormMethod.Post))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Team Select</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        @Html.AntiForgeryToken()
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-4">Select Team</label>
                                @Html.DropDownList("TeamList", new SelectList(LicenseSessionState.Instance.TeamList, "Id", "Name"), "-- Selecte Team --", new {@id="ddlTeam", @class = "col-md-8 form-control" })
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn" data-dismis="model" value="Update" />
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                </div>
            }
        </div>
    </div>
</div>