@model List<License.Models.Product>

@{
    ViewBag.Title = "RevokeLicense";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<div class="row">
    <h2>Revoke License</h2>
    <div class="col-md-12">
        <div class="form-group">
            <div class="col-md-8">
                <label>
                    Team Member Name :  @ViewBag.UserEmail
                </label>
            </div>
        </div>
        @if (Model.Count == 0)
        {
            <div class="form-group">
                <div class="col-md-8">
                    <span>No License are mapped.  </span>
                </div>
            </div>
        }
        else
        {
            using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row form-group">
                    <div class="col-md-8">
                        <label style="margin-left: 15px;">Below are the List of License for which team member is  subscribed.</label>
                    </div>
                    <div class="col-md-8">
                        <table class="table" style="border: none;margin-left:8px;">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr style="">
                                    <td>
                                        <label class="control-label">
                                            <input type="checkbox" name="selectedproduct" value="@Model[i].Id" checked="@Model[i].IsSelected"  class="checkbox-inline">
                                            @Model[i].Name
                                        </label>

                                    </td>
                                </tr>
                            }
                        </table>
                        <label style="display:none;color:red;" id="lblError">License  not selected to revoke</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8">
                        <input type="submit" value="Submit" class="btn btn-default btn-custom btn-save" />
                    </div>
                </div>
            }
        }
    </div>
</div>

@* Javascript *@
<script>
    $(document).ready(function () {
        $('.btn-save').click(function () {
            var isPostEnabled = true;
            i = 0;
            $('input[type=checkbox]:checked').each(function () {
                i++;
            });
            if (i == 0) {
                $('#lblError').attr('style', 'display:inline;color:red;');
                isPostEnabled = isPostEnabled && false;
            }
            else {
                $('#lblError').attr('style', 'display:none;');
                isPostEnabled = isPostEnabled && true;
            }
            return isPostEnabled;
        });
    });
</script>