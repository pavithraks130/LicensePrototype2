@using Microsoft.AspNet.Identity
@if (LicenseSessionState.Instance.IsAuthenticated)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hello @LicenseSessionState.Instance.User.Name <b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("Profile", "Profile", "User")</li>
            <li>@Html.ActionLink("Change Password", "ChangePassword", "User")</li>
            <li>@Html.ActionLink("Log Out", "LogOut", "Account")</li>
        </ul>
    </li>
}
else
{
    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}
