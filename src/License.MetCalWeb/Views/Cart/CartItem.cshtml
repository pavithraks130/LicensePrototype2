@model List<License.MetCalWeb.Models.CartItem>
<link href="~/Content/Site.css" rel="stylesheet" />
<div class="row">

    <h2>Cart</h2>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <div class="col-md-8">
                @if (Model != null && Model.Count > 0)
                {
                    <table class="table" style="border: none">
                        <tr>
                            <td>
                                <span style="font-weight:bold">Subscription Name</span>
                            </td>
                            <td>
                                <span style="font-weight:bold">Price</span>
                            </td>
                            <td></td>
                        </tr>
                        @{ double totalamount = 0;}
                        @foreach (var pro in Model)
                        {
                            <tr>
                                <td>
                                    @pro.SubType.Name
                                </td>
                                <td>
                                    @pro.TotalPrice
                                    @{totalamount += pro.TotalPrice; }
                                </td>
                                <td>
                                    <button id="delete-item" class="alert-warning" type="button" onclick="location.href='@Url.Action("RemoveItem", "Cart", new { Id = @pro.Id}, null)'">
                                        <img src="~/Resources/Delete Icon.png" />
                                    </button>
                                </td>
                                <td></td>

                            </tr>
                                        }
                        <tr></tr>
                        <tr>
                            <td><h2>Total</h2></td>
                            <td>
                                <h2>
                                    @totalamount
                                </h2>
                            </td>
                            <td></td>
                        </tr>

                    </table>
                    <div class="float-right">
                        <button class="alert-success"> @Html.ActionLink("Offline Payment", "OfflinePayment", "Cart")</button>
                        <button class="alert-success"> @Html.ActionLink("Onlinie Payment", "PaymentGateway", "Cart")</button>
                    </div>
                                        }
                                        else
                                        {
                                            <div>
                                                <span style="font-size: 14px; font-weight:bold">No items added to Cart</span>
                                            </div>
                                        }
            </div>
            <br />

        </div>

                                        }
</div>
