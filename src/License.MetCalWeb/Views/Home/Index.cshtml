@{
    ViewBag.Title = "Home";
}
<style>
    body {
        background-image: url('../Catalog/Page_Background_Images/Background_1.PNG');
    }
</style>
<div>
        <!--Marquee Section-->
        <div>
            <table border="0" cellspacing="0" cellpadding="0" class="Breadcrumbh_Bar">
                <tbody>
                    <tr>
                        <td class="Light_Blue_BG">
                            <div class="Content_Bar" style="width:950px;color:white">
                                <marquee behavior="scroll" direction="left" id="marquee" onkeydown="this.setAttribute('scrollamount', 0, 0);" onmouseover="this.setAttribute('scrollamount', 0, 0);" onmouseout="this.setAttribute('scrollamount', 6, 0);" scrollamount="6">
                                    <strong>Fluke Calibration is a leader in precision calibration instruments, equipment, service and software for electrical, RF, temperature, pressure and flow measurements.</strong>
                                </marquee>
                            </div>
                        </td>
                        <td width="22" align="center" valign="middle" class="Light_Blue_BG">
                            <input type="button" value="Pause" id="marqueeControlButton" onclick="controlMarquee();" style="display:none">
                            <img id="image3" alt="stop" src="../Catalog/Images/Favicon.ico" width="19" height="19" onclick="controlMarquee();">
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!--Marquee Section-->
    </div>
    <div><h2 style="color:white"> Fluke Calibration Store</h2></div>
    <div class="float-left" id="SlideshowImages">
        <img id="imageSlide" alt="" src="~/Catalog/Slide_Images/6003440-96270-video-212x100.jpg" height="300" width="600" />
    </div>
    <div class="float-right col-md-13">
        <img />
        <div> <img src="~/Catalog/Images/Content_1.PNG" height="300" width="300"> </div>
        <div> <img src="~/Catalog/Images/Content_3.PNG" height="300" width="300"> </div>
        <div> <img src="~/Catalog/Images/Content_2.PNG" height="300" width="300"> </div>
    </div>
    @* Javascript *@
    <script type="text/javascript">
            var imgs = [
                '../Catalog/Slide_Images/6003965-6270A-fcal-home-image-970x374.jpg',
                '../Catalog/Slide_Images/6007651a-en-2271a-fcal-home-slideshow-image-970x374.jpg',
                '../Catalog/Slide_Images/6003440-96270-video-212x100.jpg',
                '../Catalog/Slide_Images/f-3540fc_01a-708x490.png',
                '../Catalog/Slide_Images/f-cxt1000_02a_h.png',
                '../Catalog/Slide_Images/f-c1730_01a_c.png',
                '../Catalog/Slide_Images/f-tl221_01b_h.png'
            ];
            var cnt = imgs.length;

            $(function () {
                setInterval(Slider, 5000);
            });

            function Slider() {
                $('#imageSlide').fadeOut("slow", function () {
                    $(this).attr('src', imgs[(imgs.length++) % cnt]).fadeIn("slow");
                });
            }
    </script>


