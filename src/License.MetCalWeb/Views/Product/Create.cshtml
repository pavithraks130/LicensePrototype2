@using License.MetCalWeb.Models
@model Product
@{
    ViewBag.Title = "AddProduct";
}

<div class="row">
    <h3>Create Product</h3>
    <hr />
    <div class="col-md-12">
        <section>
            @using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="form-group">
                    <div class="col-md-2">
                        <label>Product Name</label>
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(pro => pro.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(pro => pro.Name)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2">
                        <label>Price in USD</label>
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(pro => pro.Price, new { @class = "form-control " })
                        @Html.ValidationMessageFor(pro => pro.Price)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2">
                        <label>Product Code</label>
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(pro => pro.ProductCode, new { @class = "form-control" })
                        @Html.ValidationMessageFor(pro => pro.ProductCode)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2">Description</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(pro => pro.Description, new { @class = "form-control" })
                        @Html.ValidationMessageFor(pro => pro.Description)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2">Assosiated Features</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(pro => pro.AssociatedFeatures, new { @class = "form-control" })
                        @Html.ValidationMessageFor(pro => pro.AssociatedFeatures)
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-default" data-dismis="model" value="Add Product" />
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel" />
                </div>


            }
        </section>
    </div>
</div>