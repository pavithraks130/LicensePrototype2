@using License.Models
@using License.MetCalWeb.Helper;

@model License.MetCalWeb.Models.Hardware

@{
    ViewBag.Title = "Team asset";
}
<link href="~/Content/global.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <div class="add-content">
                <button class="btn btn-default addhardware">Add Asset</button>
            </div>
            @if (Model?.Assets?.Count > 0)
            {
                <h4>Current Assests</h4>
                <div class="col-md-12">

                    <table class="table" style="border: none">
                        <thead>
                            <tr>
                                <th><label for=e1>Name</label>
                                <th><label for=e2>Serial Number</label>
                                <th><label for=e3>Description</label>
                            <tr>
                        </thead>
                        @foreach (TeamAsset t in Model.Assets)
                        {
                            <tr>
                                <td class="col-md-8">
                                    <div>@t.Name</div>
                                </td>
                                <td class="col-md-4">
                                    <div>@t.SerialNumber</div>
                                </td>
                                <td class="col-md-4">
                                    <div>@t.Description</div>
                                </td>
                                <td class="col-md-2">


                                    <div class="dropdown">
                                        <button class="dropbtn">
                                            <span>
                                                @Html.Image("../Catalog/Images/Down_Arrow.png", "Admin", "33", "33", null)
                                            </span>
                                        </button>
                                        <div class="dropdown-content">
                                            <a href="javascript:void(0);" class="anchorDetail" data-id="@t.Id">Edit</a>
                                            @Html.ActionLink("Remove Asset", "AssetConfiguration", "Hardware", new { id = @t.Id, actionType = "Remove" }, null)
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            }
        </div>
    </div>

</div>
