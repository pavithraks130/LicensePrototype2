@model  License.Models.TeamAsset

@{
    Layout = null;
    ViewBag.Title = "Edit hardware";
}
@using (Html.BeginForm("EditHardware", "Hardware",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
                @Html.HiddenFor(m => m.Id)
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Edit</h4>
                </div>
                <div class="modal-body">

                    <label id="error" class="message-error"></label>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Model, new { @class = "col-md-4" })
                                @Html.TextBoxFor(m => m.Model, new { @class = "col-md-8" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Name, new { @class = "col-md-4" })
                                @Html.TextBoxFor(m => m.Name, new { @class = "col-md-8" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.SerialNumber, new { @class = "col-md-4" })
                                @Html.TextBoxFor(m => m.SerialNumber, new { @class = "col-md-8" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Type, new { @class = "col-md-4" })
                                @Html.TextBoxFor(m => m.Type, new { @class = "col-md-8" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Description, new { @class = "col-md-4" })
                                @Html.TextBoxFor(m => m.Description, new { @class = "col-md-8" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default">Submit</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}
@* Script *@
<script>
    $(function () {
        $('form').on('submit', function (e) {
            e.preventDefault();
            var form = $(this);
            $.ajax({
                url: form.attr("action"),
                method: form.attr("method"),
                data: form.serialize(),
                success: function (partialResult) {
                    if (partialResult.success == false) {
                        $('#error').text(partialResult.message);
                    }
                    else {
                        location.reload();
                    }
                },
                error: function (data) {
                    console.log(data);
                }
            });
        });
    });
</script>