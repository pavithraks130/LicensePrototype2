@model License.MetCalWeb.Models.TeamAsset

@{
    Layout = null;
    ViewBag.Title = "Add hardware";

}
<link href="~/Content/global.css" rel="stylesheet" />
@using (Html.BeginForm("AddHardware", "Hardware", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Add Hardware</h4>
                </div>
                <div class="modal-body">

                    <label id="error" class="message-error"></label>
                    <div>
                        <div style="padding-top: 15px;padding-bottom: 10px">
                            <div class="col-md-4">
                                <span>Asset Name</span>
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Name)
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                            <br />
                        </div>
                    </div>
                    <div>
                        <div style="padding-top: 15px;padding-bottom: 10px">
                            <div class="col-md-4">
                                <span>Serial Number</span>
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.SerialNumber)
                                @Html.ValidationMessageFor(model => model.SerialNumber)
                            </div>
                            <br />
                        </div>
                    </div>

                    <div>
                        <div style="padding-top: 15px;padding-bottom: 10px">
                            <div class="col-md-4">
                                <span>Model</span>
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Model)
                                @Html.ValidationMessageFor(model => model.Model)
                            </div>
                            <br />
                        </div>
                    </div>

                    <div>
                        <div style="padding-top: 15px;padding-bottom: 10px">
                            <div class="col-md-4">
                                <span>Description</span>
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Description)
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>
                            <br />
                        </div>
                    </div>
                    <div>
                        <div style="padding-top: 15px;padding-bottom: 10px">
                            <div class="col-md-4">
                                <span>Type</span>
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Type)
                                @Html.ValidationMessageFor(model => model.Type)
                            </div>
                            <br />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-default" data-dismis="model" value="Add Asset" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}
@* Javascript *@
<script>
    $(function () {
        $('form').on('submit', function (e) {
            e.preventDefault();
            var form = $(this);
            $.ajax({
                url: form.attr("action"),
                method: form.attr("method"),
                data: form.serialize(),
                success: function (partialResult) {
                    if (partialResult.success == false) {
                        $('#error').text(partialResult.message);
                    }
                    else {
                        location.reload();
                    }
                },
                error: function (data) {
                    console.log(data);
                }
            });
        });
    });
</script>



