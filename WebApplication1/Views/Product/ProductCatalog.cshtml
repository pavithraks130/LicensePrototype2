@model List<LicenseServer.DataModel.SubscriptionType>
@{
    ViewBag.Title = "Product Catalog";
}
<div>
    <div class="col-md-9">
        <h1 class="login-header-new">Fluke Connect Store</h1>
    </div>
    <div class="col-md-1">
        <table>
            <tr>
                <td>
                    <div class="navbar-header">
                        <a class="element image-button image-left place-left " style="color: #3D1400" href="@Url.Action("CartDetails", "Dashboard")">
                            <img src="~/Resources/Cart-Menu.png" />
                        </a>
                    </div>
                </td>
                <td>
                    <a class="element image-button image-left place-left " style="color: #3D1400" href="@Url.Action("CartDetails", "Dashboard")">
                        <h2>Cart(1)</h2>
                    </a>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="row">
    
    @if (LicenseSessionState.Instance.IsSuperAdmin)
    {
        @Html.ActionLink("Create Product", "Create", "Product")
    }

    @using (Html.BeginForm())
    {
        <div class="form-group">
            <div class="col-md-8">
                <table class="table" style="border: none">
                    <tr>
                        <td>
                            <span style="font-weight:bold">Subscription Name</span>
                        </td>
                        <td>
                            <span style="font-weight:bold">Dutration</span>
                        </td>
                        <td></td>
                    </tr>
                    @foreach (var pro in Model)
                {
                        <tr>
                            <td>
                                @pro.Name
                            </td>
                            <td>
                                @pro.ActiveDays
                            </td>
                            <td>
                                @Html.ActionLink("Add To Cart", "AddProductToCart", "Product", new { Id = @pro.Id }, null)
                            </td>
                        </tr>

                }
                </table>
            </div>
        </div>
    }
</div>