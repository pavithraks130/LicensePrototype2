@model List<License.MetCalWeb.Models.LicenseMapModel>
<script>
    $(document).ready(function () {
        $('.btn-save').click(function () {
            var isPostEnabled = true;
            i = 0;
            $('input[type=radio]:checked').each(function () {
                i++;
            });
            if (i == 0) {
                $('#lblError').attr('style', 'display:inline;color:red;');
                isPostEnabled = isPostEnabled && false;
            }
            else {
                $('#lblError').attr('style', 'display:none;');
                isPostEnabled = isPostEnabled && true;
            }
            return isPostEnabled;
        });
    });
</script>
<div class="row">
    <h2>
        License Mapping To User
    </h2>
    <br />
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-8">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <li class="roleList">
                        @Html.Hidden(Model[i].ExistingUserLicenseId.ToString())
                        <label class="control-label"><input type="checkbox" name="SelectedSubscription" value="@Model[i].UserSubscriptionId" checked="@Model[i].IsSelected" class="checkbox-inline">@Model[i].SubscriptionName - @Model[i].UserSubscriptionId</label>
                    </li>
                }
                <label style="display:none;color:red;" id="lblError">License  not selected</label>
            </div>
        </div>
        <input type="submit" value="Submit" class="btn btn-default btn-custom btn-save" />
    }
</div>
