@model License.MetCalWeb.Models.UserInviteModel

@using (Html.BeginForm("Invite", "Team", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="row">
        <div class="form-group">
            @Html.Label("Invitee Email")
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Email, new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Invite" />
            </div>
        </div>
    </div>
}
