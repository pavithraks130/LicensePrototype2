@model License.MetCalWeb.Models.ResetPassword
@{
    ViewBag.Title = "ResetPassword";
}

<h2>Reset password</h2>
@if (String.IsNullOrEmpty(ViewBag.ResetMessage))
{
    using (Html.BeginForm("ResetPassword", "Account", new {UserId = Model.UserId, Code = Model.Token }, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new {@class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.ValidationMessageFor(m => m.Password)
                @Html.TextBoxFor(m => m.Password, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                @Html.TextBoxFor(m => m.ConfirmPassword, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register"/>
            </div>
        </div>
    }
}
else
{
    <div style="display:@ViewBag.Display">
        Password is reset successfully. Please click the link for <a href="@Url.Action("Login","Account")"><span>Login</span></a>.
    </div>
}
