@model IEnumerable<License.MetCalWeb.Models.Product>
@{
    ViewBag.Title = "Dashboard";
}
<div>
    <div class="col-md-8">
        <h1 class="login-header-new">Fluke Connect Store</h1>
    </div>
    <div class="col-md-4">
        <table>
            <tr>
                <td>
                    <img src="~/Resources/Cart-Menu.png" />
                </td>
                <td><h1 class="login-header-new">Cart(1)</h1></td>
            </tr>
        </table>
    </div>

</div>

@if (Model != null)
{
    <div class="col-md-8">
        @foreach (var item in Model)
        {
            <table class="table-hover" style="border:ridge;align-content:center">

                <tr>
                    <td>
                        <p class="float-left">
                            <img src="@item.ImagePath" />
                        </p>

                    </td>
                </tr>
                <tr>
                    <td>
                        <p>
                            <em>Produt Name:</em>
                            @item.ProductName
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p>
                            <em>Produt Id:</em>
                            @item.ProductID
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <em>price:</em>
                        @item.UnitPrice <em>$</em>
                    </td>
                </tr>
                <tr>
                    <td class="danger">
                        <p class="button">
                            <b>
                                <input name="Add" class="btn btn-success" type="submit" value="Add To Cart" />
                            </b>
                        </p>
                    </td>
                </tr>

            </table>
        }
    </div>
    <div class="col-md-4 form-group" >
        @{ Html.RenderPartial("CartDetails"); }
    </div>
}