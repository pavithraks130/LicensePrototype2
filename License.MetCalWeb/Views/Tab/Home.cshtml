<link href="~/Content/Drag-and-drop-container.css" rel="stylesheet" />

<style>
    .span-font {
        font-size: 16px !important;
    }

    .div-spacing {
        padding-top: 20px !important;
    }
    label{
        font-weight: normal !important; 
    }
</style>


<div class="container">

    @using (Html.BeginForm())
    {
        if (LicenseSessionState.Instance.ProductLicense == null)
        {
            <div class="row">
                No License assigned
            </div>
        }
        else
        {
            foreach (var productLicense in LicenseSessionState.Instance.ProductLicense)
            {

                @*<div class="row div-spacing">
                    <div class="col-md-12">
                        <h3> Available Type: @productLicense.SubscriptionName</h3>
                    </div>
                </div>*@

                <div class="row div-spacing" style="height:80px;">
                    @*<div onmouseover="rotateDIV()" id="rotate2D" style="transform: rotate(360deg);">2D rotate</div>*@
                    <div class="col-md-12" onmouseover="rotateYDIV()" id="rotate3D" style="transform: rotateY(180deg);">@productLicense.SubscriptionName</div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <label>Feature</label>
                    </div>
                    <div class="col-md-4">
                        <label>Version</label>
                    </div>
                    <div class="col-md-4">
                        <label>Info</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <hr />
                    </div>
                </div>
                foreach (var product in productLicense.ProductList)
                {
                    for (int i = 0; i < product.Features.Count; i++)
                    {
                        <div class="row">
                            <div class="col-md-4">
                                <label>@product.Features[i].Name</label>
                            </div>
                            <div class="col-md-4">
                                <label>@product.Features[i].Version</label>
                            </div>
                            <div class="col-md-4">
                                <label>@product.Features[i].Description</label>
                            </div>
                        </div>
                    }
                }
                <hr />

            }
        }

    }
</div>
